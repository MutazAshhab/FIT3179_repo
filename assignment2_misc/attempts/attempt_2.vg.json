{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "params": [
        {
            "name": "Year_selection",
            "value": 2015,
            "bind": {
                "input": "range",
                "min": 2015,
                "max": 2019,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Taz17/FIT3179_repo/master/assignment2_data/topojson/continents.topojson.json",

                "format": {
                    "type": "topojson",
                    "feature": "custom-all areas-.geo"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.name",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Taz17/FIT3179_repo/master/assignment2_data/topojson/continents.topojson.json",

                "format": {
                    "type": "topojson",
                    "feature": "custom-all areas-.geo"
                }
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/Taz17/FIT3179_repo/master/assignment2_data/happiness_report/wide_form/Freedom-to-make-life-choices.csv"
                        },
                        "key": "Country_or_region",
                        "fields": ["2015", "2016", "2017", "2018", "2019"]
                    },
                    "as": "geo"
                },
                {
                    "calculate": "datum[Year_selection] + 1",
                    "as": "year_value"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "year_value",
                    "type": "quantitative",
                    "scale": {
                        "domain": [0, 1],
                        "scheme": "reds"
                    },
                    "legend": { "format": ".2s" }
                },
                "tooltip": [
                    {
                        "field": "Country_or_region",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "year_value",
                        "type": "quantitative",
                        "title": "Freedom to make life choices"
                    },
                    {
                        "field": "Year_selection",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        }
    ],
    "config": {}
}
